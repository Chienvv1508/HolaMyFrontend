                                    <option value="">Chọn loại phòng</option>
                                    @if (Model.Building.Rooms.Any())
                                    {
                                        @foreach (var room in Model.Building.Rooms)
                                        {
                                            <option value="@room.RoomId">@(room.RoomType?.RoomTypeName ?? "N/A")</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">Không có loại phòng</option>
                                    }
                                </select>
                            </div>
                            <input type="hidden" name="buildingId" value="@Model.Building.BuildingId">
                            <button type="submit" class="btn border border-secondary rounded-pill px-4 py-2 text-primary">
                                <i class="fas fa-cart-plus me-2 text-primary"></i> Lưu vào danh sách
                            </button>
                        </form>
