<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">Tìm phòng trọ phù hợp với bạn</h4>
                <h1 class="mb-5 display-3 text-primary">Dễ dàng tìm kiếm & lựa chọn</h1>
                <form method="get" asp-page="/Buildings/BuildingList" class="position-relative mx-auto">
                    <input name="search" value="@Model.Search" class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill"
                           type="text" placeholder="Tìm kiếm theo tên, địa chỉ, loại phòng..." />
                    <button type="submit"
                            class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100"
                            style="top: 0; right: 25%;">
                        Tìm ngay
                    </button>
                </form>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @if (Model.RoomTypeListDTO != null && Model.RoomTypeListDTO.Count > 0)
                        {
                            var index = 1;
                            @foreach (var roomType in Model.RoomTypeListDTO)
                            {
                                var isActive = index == 1 ? "active" : "";
                                <div class="carousel-item @isActive rounded">
                                    <div style="height: 350px; overflow: hidden;">
                                        <img src="img/roomType/roomType@(index).jpg" class="img-fluid w-100 h-100 object-fit-cover rounded" alt="Slide @(index)"
                                             style="height: 100%; width: 100%; object-fit: cover;" />
                                    </div>
                                    <a href="/Buildings/BuildingList?roomTypeIds=@roomType.RoomTypeId"
                                    class="btn px-4 py-2 text-white rounded">@roomType.RoomTypeName</a>
                                </div>
                                index++;
                            }
                        }
                        
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
