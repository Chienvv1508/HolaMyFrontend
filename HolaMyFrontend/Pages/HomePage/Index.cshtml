<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Our Buildings by Ward</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active"
                               data-bs-toggle="pill" href="#tab-all">
                                <span class="text-dark" style="width: 130px;">All Buildings</span>
                            </a>
                        </li>
                        @foreach (var ward in Model.TopWardBuildings.Keys.Select((w, i) => new { Name = w, Index = i + 1 }))
                        {
                            <li class="nav-item">
                                <a class="d-flex m-2 py-2 bg-light rounded-pill"
                                   data-bs-toggle="pill" href="#tab-@ward.Index">
                                    <span class="text-dark" style="width: 130px;">@ward.Name</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                <!-- All Buildings: chỉ show tối đa 8 -->
                <div id="tab-all" class="tab-pane fade show active p-0">
                    <div class="row g-4">
                        @foreach (var b in Model.Buildings.Take(8))
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <div class="rounded position-relative fruite-item">
                                    <div class="fruite-img">
                                        <img src="@b.ThumbnailUrl"
                                             alt="@b.BuildingName" />
                                    </div>
                                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                         style="top: 10px; left: 10px;">
                                        @b.WardName
                                    </div>
                                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                        <h4>@b.BuildingName</h4>
                                        <p>@b.Address</p>
                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                            <p class="text-dark fs-5 fw-bold mb-0">
                                                @((b.DisplayPrice ?? 0).ToString("C0"))
                                            </p>
                                            <a href="/Buildings/BuildingDetail/@b.BuildingId"
                                               class="btn border border-secondary rounded-pill px-3 text-primary">
                                                <i class="fa fa-building me-2 text-primary"></i>
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @foreach (var wardGroup in Model.TopWardBuildings
                                .Select((g, i) => new { g.Key, Items = g.Value, Index = i + 1 }))
                {
                    <div id="tab-@wardGroup.Index" class="tab-pane fade show p-0">
                        <div class="row g-4">
                            @foreach (var b in wardGroup.Items)
                            {
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                            <img src="@b.ThumbnailUrl"
                                                 alt="@b.BuildingName" />
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                             style="top: 10px; left: 10px;">
                                            @b.WardName
                                        </div>
                                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                            <h4>@b.BuildingName</h4>
                                            <p>@b.Address</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">
                                                    @((b.DisplayPrice ?? 0).ToString("C0"))
                                                </p>
                                                <a href="/Buildings/BuildingDetail/@b.BuildingId"
                                                   class="btn border border-secondary rounded-pill px-3 text-primary">
                                                    <i class="fa fa-building me-2 text-primary"></i>
                                                    View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

