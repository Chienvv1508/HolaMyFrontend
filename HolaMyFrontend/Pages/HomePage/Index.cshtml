<!-- Bestsaler Product Start -->
<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        <h2 class="mb-4">Tòa nhà được đánh giá cao</h2>
        <div class="row g-4">
            @foreach (var b in Model.TopRatedBuildings)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="border border-primary rounded p-3 h-100 d-flex flex-column">
                        <img src="@b.ThumbnailUrl" alt="@b.BuildingName"
                             class="img-fluid rounded mb-3" style="height:180px; object-fit:cover;" />

                        <h5 class="mb-1">@b.BuildingName</h5>
                        <p class="mb-1 text-muted">@b.Address</p>

                        @{
                            var fullStars = (int)Math.Floor(b.Rating);
                            var hasHalfStar = b.Rating - fullStars >= 0.5;
                            var emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                        }
                        <div class="mb-2 d-flex align-items-center">
                            @for (int i = 0; i < fullStars; i++)
                            {
                                <i class="fas fa-star text-warning me-1"></i>
                            }
                            @if (hasHalfStar)
                            {
                                <i class="fas fa-star-half-alt text-warning me-1"></i>
                            }
                            @for (int i = 0; i < emptyStars; i++)
                            {
                                <i class="far fa-star text-warning me-1"></i>
                            }
                            <span class="ms-2 text-muted">(@b.RatingNumber)</span>
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-danger fs-5">@((b.DisplayPrice ?? 0).ToString("N0")) Đ</span>
                            <a href="/Building/Details/@b.BuildingId"
                               class="btn border border-secondary rounded-pill px-3 text-primary">
                                <i class="fa fa-building me-2 text-primary"></i>Xem
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


