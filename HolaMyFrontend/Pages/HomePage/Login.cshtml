@page
@model HolaMyFrontend.Pages.HomePage.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<!-- Single Page Header start -->
<div class="container-fluid py-5" style="margin-top: 10px">
</div>
<!-- Single Page Header End -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="bg-light rounded p-4">
                    <h2 class="text-center mb-4">Đăng nhập</h2>
                    <form id="phone-login-form" asp-page-handler="Phone" method="post">

                        <div class="mb-3">
                            <label for="loginPhone.PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="loginPhone.PhoneNumber" class="form-control" placeholder="Số điện thoại" required />
                            <span id="phoneNumber-error" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="loginPhone.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="loginPhone.Password" type="password" class="form-control" placeholder="Mật khẩu" required />
                            <span id="password-error" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill">Đăng nhập</button>
                    </form>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <p class="text-center mt-2">
                        <a href="/HomePage/ForgotPassword" class="text-secondary">Quên mật khẩu?</a>
                    </p>
                    <hr class="my-4" />
                    <h4 class="text-center mb-3">Hoặc</h4>
                    <form asp-page-handler="Google" method="post">
                        <button type="submit" class="btn btn-outline-danger w-100 rounded-pill">
                            <i class="fab fa-google me-2"></i> Đăng nhập bằng Google
                        </button>
                    </form>
                    <p class="text-center mt-3">
                        Chưa có tài khoản? <a href="/HomePage/Register" class="text-primary">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Lưu token vào localStorage nếu có
        const token = '@ViewData["Token"]';
        if (token && token !== 'null') {
            localStorage.setItem('jwtToken', token);
            console.log('Token stored in localStorage and cookie');
        } else {
            console.log('No token provided');
        }
    </script>
